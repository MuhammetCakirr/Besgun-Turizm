<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/arkaplan"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/font5"
                    android:gravity="center"
                    android:text="Beşgün Turizm"
                    android:textColor="@color/Teal_700"
                    android:textSize="30sp">

                </TextView>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:fontFamily="@font/font3"
                    android:text="Hızlı Rezervasyon"
                    android:textColor="@color/GM2_grey_800"
                    android:textSize="20sp">

                </TextView>


                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="10dp"
                    android:background="@color/white"
                    app:cardCornerRadius="8dp">

                    <RelativeLayout
                        android:id="@+id/giristarihisec"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="5dp">

                        <ImageView
                            android:id="@+id/tarihbar"
                            android:layout_width="30dp"
                            android:layout_height="50dp"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="5dp"
                            android:src="@drawable/tarih">

                        </ImageView>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="5dp"
                            android:layout_toRightOf="@id/tarihbar"
                            android:orientation="vertical">


                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:fontFamily="@font/font2"
                                android:text="Giriş Tarihi">

                            </TextView>

                            <TextView
                                android:visibility="gone"
                                android:id="@+id/giristarihi"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="2dp"
                                android:fontFamily="@font/font5"
                                android:gravity="center_vertical"
                                android:text="26 Mayıs Cuma"
                                android:textColor="@color/black"
                                android:textSize="18dp"></TextView>
                        </LinearLayout>
                    </RelativeLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_gravity="center"
                    android:layout_margin="10dp"
                    android:background="@color/white"
                    app:cardCornerRadius="8dp">

                    <RelativeLayout
                        android:id="@+id/cikistarihisec"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="5dp">

                        <ImageView
                            android:id="@+id/cikistarihbar"
                            android:layout_width="30dp"
                            android:layout_height="50dp"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="5dp"
                            android:src="@drawable/tarih">

                        </ImageView>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:layout_toRightOf="@id/cikistarihbar"
                            android:orientation="vertical">


                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:fontFamily="@font/font2"
                                android:text="Çıkış Tarihi">
                            </TextView>

                            <TextView
                                android:visibility="gone"
                                android:id="@+id/cikistarihi"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="2dp"
                                android:fontFamily="@font/font5"
                                android:gravity="center_vertical"
                                android:text="30 Mayıs Perşembe"
                                android:textColor="@color/black"
                                android:textSize="18dp"></TextView>
                        </LinearLayout>
                    </RelativeLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_gravity="center"
                    android:layout_margin="10dp"
                    android:background="@color/white"
                    app:cardCornerRadius="8dp">

                    <RelativeLayout
                        android:id="@+id/kisisayisisec"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="5dp">

                        <ImageView
                            android:id="@+id/kisisayisifoto"
                            android:layout_width="30dp"
                            android:layout_height="50dp"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="5dp"
                            android:src="@drawable/kisiler">

                        </ImageView>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="10dp"
                            android:layout_toRightOf="@id/kisisayisifoto"
                            android:orientation="vertical">


                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="3dp"
                                android:fontFamily="@font/font2"
                                android:text="Kişi Sayısı">

                            </TextView>

                            <TextView
                                android:id="@+id/kisisayisi"
                                android:visibility="gone"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="2dp"
                                android:fontFamily="@font/font5"
                                android:gravity="center_vertical"
                                android:text="2 Yetişkin, 1 Çocuk"
                                android:textColor="@color/black"
                                android:textSize="18dp"></TextView>
                        </LinearLayout>
                    </RelativeLayout>
                </androidx.cardview.widget.CardView>


                <androidx.cardview.widget.CardView
                    android:id="@+id/otelarabtn"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_gravity="center"
                    android:layout_margin="10dp"
                    android:background="@color/white"
                    android:backgroundTint="@color/system_accent1_50"
                    app:cardCornerRadius="8dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:fontFamily="@font/font4"
                        android:text="OTEL ARA"
                        android:textColor="@color/black"
                        android:textSize="20dp"></TextView>
                </androidx.cardview.widget.CardView>
            </LinearLayout>


            <androidx.cardview.widget.CardView
                android:id="@+id/cardview"
                app:cardCornerRadius="7dp"
                android:layout_margin="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@color/system_accent1_50">
                <LinearLayout
                    android:background="@color/system_accent1_50"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <RelativeLayout
                        android:id="@+id/hizmetlerimizbtn"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginEnd="10dp"
                            android:layout_marginBottom="10dp"
                            android:fontFamily="@font/font1"
                            android:text="Hizmetlerimiz"
                            android:textColor="@color/GM2_grey_800"
                            android:textSize="20sp"></TextView>

                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="3dp"
                            android:src="@drawable/asagiok">
                        </ImageView>
                    </RelativeLayout>

                    <LinearLayout
                        android:id="@+id/layout"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                         android:visibility="visible"
                        >

                    <LinearLayout
                        android:id="@+id/otellayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <de.hdodenhof.circleimageview.CircleImageView
                            android:padding="2dp"
                            android:layout_width="160dp"
                            android:layout_height="160dp"
                            android:src="@drawable/otel">
                        </de.hdodenhof.circleimageview.CircleImageView>

                        <LinearLayout
                            android:layout_marginLeft="3dp"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">
                            <TextView
                                android:textStyle="italic"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/font4"
                                android:text="Otel Rezervasyonları"
                                android:textColor="@color/GM2_grey_800"
                                android:textSize="20sp"></TextView>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Seyahat etmeyi sevenler için bir rüya gibi tatil deneyimleri sunuyoruz. Otel rezervasyonlarınızı tamamen sizin isteklerinize uygun şekilde düzenliyoruz. Lüks oteller, butik konaklamalar, şehir merkezindeki modern oteller veya doğa ile iç içe olan tesisler.."></TextView>
                        </LinearLayout>



                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/yurtdisilayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <de.hdodenhof.circleimageview.CircleImageView
                            android:padding="2dp"
                            android:layout_width="160dp"
                            android:layout_height="160dp"
                            android:src="@drawable/paris2">
                        </de.hdodenhof.circleimageview.CircleImageView>

                        <LinearLayout
                            android:layout_marginLeft="3dp"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">
                            <TextView
                                android:textStyle="italic"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/font4"
                                android:text="Yurt Dışı Turları"
                                android:textColor="@color/GM2_grey_800"
                                android:textSize="20sp"></TextView>
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Bizim turizm acentamız, unutulmaz yurt dışı turlarıyla sizleri hayal dünyasına davet ediyor. Size büyüleyici destinasyonlar sunarak, keşfetmek istediğiniz yeni kültürlerle dolu bir macera vaat ediyoruz.Bizimle hayatınızın en özel deneyimlerini yaşayın.">
                            </TextView>
                        </LinearLayout>



                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/gemilayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <de.hdodenhof.circleimageview.CircleImageView
                            android:padding="2dp"
                            android:layout_width="160dp"
                            android:layout_height="160dp"
                            android:src="@drawable/gemituru">
                        </de.hdodenhof.circleimageview.CircleImageView>

                        <LinearLayout
                            android:layout_marginLeft="3dp"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">
                            <TextView
                                android:textStyle="italic"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/font4"
                                android:text="Gemi Turları"
                                android:textColor="@color/GM2_grey_800"
                                android:textSize="20sp"></TextView>
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Eşsiz deniz maceralarıyla dolu unutulmaz tekne turları sunmaktadır. Kristal berraklığındaki suları keşfederek, güneşin sıcak dokunuşunu hissedip rüzgarın dansına eşlik ederken, misafirlerimize anılarla dolu bir deneyim yaşatıyoruz.">
                            </TextView>
                        </LinearLayout>



                    </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:id="@+id/cardview2"
                app:cardCornerRadius="7dp"
                android:layout_margin="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@color/system_accent1_50">
                <LinearLayout
                    android:background="@color/system_accent1_50"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <RelativeLayout
                        android:id="@+id/populerbolgelerbtn"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginEnd="10dp"
                            android:layout_marginBottom="10dp"
                            android:fontFamily="@font/font1"
                            android:text="Popüler Bölgeler"
                            android:textColor="@color/GM2_grey_800"
                            android:textSize="20sp">

                        </TextView>

                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="3dp"
                            android:src="@drawable/asagiok">
                        </ImageView>
                    </RelativeLayout>

                    <LinearLayout
                        android:visibility="visible"
                        android:id="@+id/layout2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <androidx.recyclerview.widget.RecyclerView
                                android:id="@+id/rcpopulerbolgeler"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:scrollbars="horizontal"
                                tools:itemCount="5"
                                tools:listitem="@layout/populer_kutucuklari">
                            </androidx.recyclerview.widget.RecyclerView>

                        </LinearLayout>

                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:id="@+id/cardview3"
                app:cardCornerRadius="7dp"
                android:layout_margin="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@color/system_accent1_50">
                <LinearLayout
                    android:background="@color/system_accent1_50"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <RelativeLayout
                        android:id="@+id/tatiltemalaribtn"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginEnd="10dp"
                            android:layout_marginBottom="10dp"
                            android:fontFamily="@font/font1"
                            android:text="Tatil Temaları"
                            android:textColor="@color/GM2_grey_800"
                            android:textSize="20sp">

                        </TextView>

                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="3dp"
                            android:src="@drawable/asagiok">
                        </ImageView>
                    </RelativeLayout>

                    <LinearLayout
                        android:visibility="visible"
                        android:id="@+id/layout3"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <androidx.recyclerview.widget.RecyclerView
                                android:id="@+id/rctatiltemalari"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:scrollbars="horizontal"
                                tools:listitem="@layout/populer_kutucuklari">
                            </androidx.recyclerview.widget.RecyclerView>

                        </LinearLayout>

                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>


        </LinearLayout>
    </ScrollView>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNavigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginBottom="30dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/bottom_background"
        android:elevation="2dp"
        app:itemIconSize="30dp"
        app:itemIconTint="@drawable/item_selector"
        app:itemRippleColor="@android:color/transparent"
        app:labelVisibilityMode="unlabeled"
        app:menu="@menu/bottom_menu"
        tools:ignore="MissingConstraints" />

</androidx.constraintlayout.widget.ConstraintLayout>