                            android:layout_height="wrap_content"
                            android:layout_marginStart="10dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginEnd="10dp"
                            android:layout_marginBottom="10dp"
                            android:fontFamily="@font/font4"
                            android:text="Tatil Temasına Göre Filtrele"
                            android:textColor="@color/GM2_grey_800"
                            android:textSize="20sp">
                        </TextView>

                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="3dp"
                            android:src="@drawable/asagiok">
                        </ImageView>
                    </RelativeLayout>

                    <LinearLayout
                        android:visibility="visible"
                        android:id="@+id/layouttatiltemasi"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">
                                <CheckBox
                                    android:id="@+id/balayioteller"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    >
                                </CheckBox>
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Balayı Otelleri"
                                    android:textColor="@color/black">

                                </TextView>
                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">
                                <CheckBox
                                    android:id="@+id/butikoteller"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    >
                                </CheckBox>
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Butik Oteller"
                                    android:textColor="@color/black">

                                </TextView>
                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">
                                <CheckBox
                                    android:id="@+id/termaloteller"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    >
                                </CheckBox>
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Termal Oteller"
                                    android:textColor="@color/black">

                                </TextView>
                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">
                                <CheckBox
                                    android:id="@+id/sehirotel"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    >
                                </CheckBox>
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Şehir Otelleri"
                                    android:textColor="@color/black">

                                </TextView>
                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">
                                <CheckBox
                                    android:id="@+id/tatilkoyleri"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    >
                                </CheckBox>
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Tatil Köyleri"
                                    android:textColor="@color/black">

                                </TextView>
                            </LinearLayout>

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>
            </androidx.cardview.widget.CardView>
