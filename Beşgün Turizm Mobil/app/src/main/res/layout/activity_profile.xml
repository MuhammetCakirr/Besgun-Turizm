<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Views.ProfileActivity">

   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:orientation="vertical"
       tools:ignore="MissingConstraints">
       
       <RelativeLayout
           android:background="@color/white"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           >

           <ImageView
               android:layout_centerVertical="true"
               android:id="@+id/profilfoto"
               android:layout_width="50dp"
               android:layout_height="50dp"
               android:layout_alignParentLeft="true"
               android:layout_marginStart="10dp"
               android:layout_marginTop="10dp"
               android:layout_marginEnd="10dp"
               android:layout_marginBottom="10dp"
               android:src="@drawable/acco"></ImageView>
           <LinearLayout
               android:layout_centerVertical="true"
               android:layout_marginTop="10dp"
               android:layout_toRightOf="@+id/profilfoto"
               android:id="@+id/linearid"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:orientation="vertical">
               <TextView
                   android:textColor="@color/black"
                   android:textSize="17sp"
                   android:fontFamily="@font/font5"
                   android:id="@+id/kullaniciadsoyad"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:text="Muhammet Çakır">
               </TextView>
               <TextView
                   android:textSize="14sp"
                   android:fontFamily="@font/font3"
                   android:id="@+id/kullanicimail"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:text="mamicakir30@gmail.com">
               </TextView>
           </LinearLayout>

       </RelativeLayout>
       <LinearLayout
           android:background="@color/system_accent1_100"
           android:layout_width="match_parent"
           android:layout_height="match_parent"
           android:orientation="vertical">
           
           <androidx.cardview.widget.CardView
               android:backgroundTint="@color/white"
               android:layout_margin="10dp"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:padding="10dp"
               app:cardCornerRadius="10dp">
               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:orientation="vertical">
                   <RelativeLayout
                       android:id="@+id/btnhesabim"
                       android:padding="7dp"
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content">
                       <ImageView
                           android:layout_marginLeft="10dp"
                           android:layout_centerVertical="true"
                           android:id="@+id/myac"
                           android:padding="5dp"
                           android:layout_width="40dp"
                           android:layout_height="40dp"
                           android:layout_alignParentLeft="true"
                           android:src="@drawable/myaccount">

                       </ImageView>
                       <ImageView
                            android:layout_marginRight="10dp"
                           android:layout_centerVertical="true"
                           android:id="@+id/sagok"
                           android:layout_width="30dp"
                           android:layout_height="30dp"
                           android:layout_alignParentRight="true"
                           android:src="@drawable/sagok">
                       </ImageView>
                       <LinearLayout
                           android:layout_marginLeft="10dp"
                           android:layout_centerVertical="true"
                           android:layout_marginTop="10dp"
                           android:layout_toRightOf="@+id/myac"
                           android:layout_width="match_parent"
                           android:layout_height="wrap_content"
                           android:orientation="vertical">
                           <TextView
                               android:textColor="@color/black"
                               android:textSize="15sp"
                               android:fontFamily="@font/font5"
                               android:layout_width="match_parent"
                               android:layout_height="wrap_content"
                               android:text="Hesabım">
                           </TextView>
                           <TextView
                               android:textSize="12sp"
                               android:fontFamily="@font/font3"
                               android:layout_width="match_parent"
                               android:layout_height="wrap_content"
                               android:text="Kişisel bilgiler,şifre bilgileri">
                           </TextView>
                       </LinearLayout>
                   </RelativeLayout>
                   <com.google.android.material.divider.MaterialDivider
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       app:dividerColor="@color/accessibility_feature_background"
                       android:layout_marginLeft="10dp"
                       android:layout_marginRight="10dp"
                       android:layout_marginTop="5dp">

                   </com.google.android.material.divider.MaterialDivider>

                   <RelativeLayout
                       android:id="@+id/btnrezervasyonlarim"
                       android:padding="7dp"
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content">
                       <ImageView
                           android:layout_marginLeft="10dp"
                           android:layout_centerVertical="true"
                           android:id="@+id/rez"
                           android:padding="5dp"
                           android:layout_width="40dp"
                           android:layout_height="40dp"
                           android:layout_alignParentLeft="true"
                           android:src="@drawable/reserve">
                       </ImageView>
                       <ImageView
                           android:layout_marginRight="10dp"
                           android:layout_centerVertical="true"

                           android:layout_width="30dp"
                           android:layout_height="30dp"
                           android:layout_alignParentRight="true"
                           android:src="@drawable/sagok">
                       </ImageView>
                       <LinearLayout
                           android:layout_marginLeft="10dp"
                           android:layout_centerVertical="true"
                           android:layout_marginTop="10dp"
                           android:layout_toRightOf="@+id/rez"
                           android:layout_width="match_parent"
                           android:layout_height="wrap_content"
                           android:orientation="vertical">
                           <TextView
                               android:textColor="@color/black"
                               android:textSize="15sp"
                               android:fontFamily="@font/font5"
                               android:layout_width="match_parent"
                               android:layout_height="wrap_content"
                               android:text="Rezervasyonlarım">
                           </TextView>
                           <TextView
                               android:textSize="12sp"
                               android:fontFamily="@font/font3"
                               android:layout_width="match_parent"
                               android:layout_height="wrap_content"
                               android:text="Geçmiş ve gelecek rezervasyonlarınızı görün">
                           </TextView>
                       </LinearLayout>
                   </RelativeLayout>
                   <com.google.android.material.divider.MaterialDivider
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       app:dividerColor="@color/accessibility_feature_background"

                       android:layout_marginLeft="10dp"
                       android:layout_marginRight="10dp"
                       android:layout_marginTop="5dp">

                   </com.google.android.material.divider.MaterialDivider>

                   <RelativeLayout
                       android:id="@+id/cikisyapbtn"
                       android:padding="7dp"
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content">
                       <ImageView
                           android:layout_marginLeft="10dp"
                           android:layout_centerVertical="true"
                           android:id="@+id/logout"
                           android:padding="5dp"
                           android:layout_width="40dp"
                           android:layout_height="40dp"
                           android:layout_alignParentLeft="true"
                           android:src="@drawable/logout2">
                       </ImageView>
                       <ImageView
                           android:layout_marginRight="10dp"
                           android:layout_centerVertical="true"
                           android:layout_width="30dp"
                           android:layout_height="30dp"
                           android:layout_alignParentRight="true"
                           android:src="@drawable/sagok">
                       </ImageView>
                       <LinearLayout
                           android:layout_marginLeft="10dp"
                           android:layout_centerVertical="true"
                           android:layout_marginTop="10dp"
                           android:layout_toRightOf="@+id/logout"
                           android:layout_width="match_parent"
                           android:layout_height="wrap_content"
                           android:orientation="vertical">
                           <TextView
                               android:textStyle="bold"
                               android:textColor="@color/Blue_800"
                               android:textSize="15sp"
                               android:fontFamily="@font/font5"
                               android:layout_width="match_parent"
                               android:layout_height="wrap_content"
                               android:text="Çıkış yap">
                           </TextView>
                       </LinearLayout>
                   </RelativeLayout>

                   <RelativeLayout
                       android:id="@+id/hesabimisilbtn"
                       android:padding="7dp"
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content">
                       <ImageView
                           android:layout_marginLeft="10dp"
                           android:layout_centerVertical="true"
                           android:id="@+id/delete"
                           android:padding="5dp"
                           android:layout_width="40dp"
                           android:layout_height="40dp"
                           android:layout_alignParentLeft="true"
                           android:src="@drawable/delete">
                       </ImageView>

                       <LinearLayout
                           android:layout_marginLeft="10dp"
                           android:layout_centerVertical="true"
                           android:layout_marginTop="10dp"
                           android:layout_toRightOf="@+id/delete"
                           android:layout_width="match_parent"
                           android:layout_height="wrap_content"
                           android:orientation="vertical">
                           <TextView
                               android:textStyle="bold"
                               android:textColor="@color/Blue_800"
                               android:textSize="15sp"
                               android:fontFamily="@font/font5"
                               android:layout_width="match_parent"
                               android:layout_height="wrap_content"
                               android:text="Hesabımı sil">
                           </TextView>
                       </LinearLayout>
                   </RelativeLayout>
               </LinearLayout>

           </androidx.cardview.widget.CardView>
       </LinearLayout>
   </LinearLayout>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNavigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginBottom="30dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/bottom_background"
        android:elevation="2dp"
        app:itemIconSize="30dp"
        app:itemIconTint="@drawable/item_selector"
        app:itemRippleColor="@android:color/transparent"
        app:labelVisibilityMode="unlabeled"
        app:menu="@menu/bottom_menu"
        tools:ignore="MissingConstraints" />
</androidx.constraintlayout.widget.ConstraintLayout>