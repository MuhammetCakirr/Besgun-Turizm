@model TekneTurView
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <link href="https://fonts.googleapis.com/css2?family=Open+Sans&amp;display=swap" rel="stylesheet">
    
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.1.1/css/all.min.css" integrity="sha512-KfkfwYDsLkIlwQp6LFnl8zNdLGxu9YAA1QvwINks4PhcElQSvqcyVLLD9aMhXd13uQjoXtEKNosOWaZqXgel0g==" crossorigin="anonymous" referrerpolicy="no-referrer">

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">

    <link rel="stylesheet" href="../css/style.css">
    <link rel="stylesheet" href="../css/utils.css">
    <title>Tekne Tur Detayı</title>
</head>
<body>

  <header class="main-header-yurtdisiTurlar secili-active">
    <nav class="navbar navbar-expand-lg navbar-light bg-warning sticky-top">
            <div class="container-fluid">
                <h1 class="brand">
                    <i class="fa-solid fa-plane-departure" style="color: #1a1a19;"></i>
                </h1>
               <a class="navbar-brand ms-3" asp-action="Anasayfa" asp-controller="Anasayfa">Beşgün Turizm</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarScroll" aria-controls="navbarScroll" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarScroll">
                    <ul class="navbar-nav me-auto my-2 my-lg-0 navbar-nav-scroll" style="--bs-scroll-height: 100px;">
                        <li class="nav-item">
                            <a class="nav-link "  asp-controller="Anasayfa" asp-action="Anasayfa" >Ana Sayfa</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link " asp-controller="Anasayfa" asp-action="Hizmetler">Hizmetler</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link  " asp-controller="Anasayfa" asp-action="Oteller">Oteller</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link active" asp-controller="Anasayfa" asp-action="TekneTurları">Tekne Turları</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Anasayfa" asp-action="YurtdisiTurlar">Yurtdışı Turlar</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link " asp-controller="Anasayfa" asp-action="İletişim">İletişim</a>
                        </li>
                    </ul>
                    
                    <a asp-controller="Kullanıcıİşlemleri" asp-action="Kayıt" class="btn border border-dark rounded-pill ms-auto me-2"><i class="fa-solid fa-arrow-right-to-bracket me-2"></i>Giriş Yap ya da Kayıt Ol</a>
                    <a asp-controller="Kullanıcıİşlemleri" asp-action="Ayarlar" class="btn border border-dark rounded-circle me-2"><i class="fa-solid fa-gear"></i></a>
                    
                </div>
            </div>
        </nav>

    <div class="content-yurtdisiTurlar">
      <div class="d-flex">
        <i class="fa-solid fa-location-dot fa-2x me-3 mt-2"></i>
        <h1>@Model.adi</h1>
      </div>
    </div>
  </header>

  <main>
    <div class="container">
      <div class="row g-4 p-2 d-flex justify-content-center">
        <div class="col-xl-7 col-lg-7 col-md-7 col-sm-12 rounded me-2" style="background-color: #F0F0F0;">
          <h4 class="mt-4 fw-bolder">TUR PROGRAMI</h4>
          <div class="d-flex p-2 justify-content-start align-items-center mb-2 rounded bg-light">
            <p class="border rounded-circle p-3 bg-warning">1.Gün</p>
            <div>
              <h6 class="fw-bolder ms-3">@ViewBag.gunBir</h6>
              <p class="ms-3">@Model.gunBir.Split(")")[1]</p>
            </div>
          </div>
    
          <div class="d-flex p-2 justify-content-start align-items-center mb-2 rounded bg-light">
            <p class="border rounded-circle p-3 bg-warning">2.Gün</p>
            <div>
              <h6 class="fw-bolder ms-3">@ViewBag.gunIki</h6>
              <p class="ms-3">@Model.gunIki.Split(")")[1]</p>
            </div>
          </div>
    
          <div class="d-flex p-2 justify-content-start align-items-center mb-2 rounded bg-light">
            <p class="border rounded-circle p-3 bg-warning">3.Gün</p>
            <div>
              <h6 class="fw-bolder ms-3">@ViewBag.gunUc</h6>
              <p class="ms-3">@Model.gunUc.Split(")")[1]</p>
            </div>
          </div>
    
          <div class="d-flex p-2 justify-content-start align-items-center mb-2 rounded bg-light">
            <p class="border rounded-circle p-3 bg-warning">4.Gün</p>
            <div>
              <h6 class="fw-bolder ms-3">@ViewBag.gunDort</h6>
              <p class="ms-3">@Model.gunDort.Split(")")[1]</p>
            </div>
          </div>
    
          <div class="d-flex p-2 justify-content-start align-items-center mb-2 rounded bg-light">
            <p class="border rounded-circle p-3 bg-warning">5.Gün</p>
            <div>
              <h6 class="fw-bolder ms-3">@ViewBag.gunBes</h6>
              <p class="ms-3">@Model.gunBes.Split(")")[1]</p>
            </div>
          </div>
          <form asp-action="Rezervasyon" asp-controller="Kullanıcıİşlemleri" method="get">
          <button class="btn btn-warning btn_rezervasyonTekneTuru p-2 w-100" name="teknetur" value="@Model.idTekneTur">Rezervasyon Yap</button>
          </form>
        </div>

        <div class="col-xl-4 col-lg-4 col-md-4 col-sm-12 rounded" style="background-color: #F0F0F0;">
          <h4 class="fw-bolder mt-4">Genel Şartlar</h4>
          <div class="mt-3 rounded bg-light p-2">
            <h4>Ücrete Dahil Olan Hizmetler</h4>
            <p>Pegasus Hava Yolları ile İstanbul Sabiha Gökçen – Venedik / Milano – İstanbul Sabiha Gökçen ekonomi sınıfı uçak bileti.</p>
            <p>Havalimanı – Liman – Havalimanı transferler.</p>
            <p>Havalimanı ve liman vergileri. (350€) Tercih edilen kategoride tur süresince konaklama.</p>
            <p>Gemide sabah, öğle, akşam yemekleri ve ara ikramlar. Açık büfe ve geminin çeşitli alanlarında bulunan otomatlardan alınan içecekler.</p>
            <p>Gemideki eğlence ve şovlar.</p>
            <p>Fitness & Spor salonu kullanımı./p>
            <p>Seyahat süresini kapsayan mesleki zorunluluk sigortası & Seyahat sağlık sigortası. 70 yaş ve üzeri %100 surprim uygulanır. (25€) </p>
          </div>

          <div class="mt-3 rounded bg-light p-2 mb-2">
            <h4>Ücrete Dahil Olmayan Hizmetler</h4>
            <p>Servis ücretleri. Günlük kişi başı 12€ gemide ödenir. Zorunludur. Dileyen misafirlerimiz rezervasyon esnasında ödeyebilir.</p>
            <p>Sağlık hizmetleri.</p>
            <p>Kara turları.</p>
            <p>İptal teminatlı seyahat sağlık sigortası. 50€</p>
            <p>Kişisel Harcamalar.</p>
            <p>İç hat bağlantı uçuşları.</p>
            <p>Gerekli vize ücreti (Çok girişli schengen vizesi)</p>
            <p>Gemide bar ve restoranlarda alınan tüm içecekler.</p>
            <p>Yurtdışı çıkış harcı.</p>
          </div>
        </div>
      </div>
      
    </div>
  </main>


   
   <footer class="footer bg-light mt-2">
        <div class="container">
            <div class="row g-2 p-2 d-flex justify-content-center">

                <div class="col-xl-3 col-lg-3 col-md-6 col-sm-12 mb-3">
                    <h4><i class="fa-solid fa-chevron-down fa-2x me-2"></i>Popüler bölgeler</h4>
                    <p class="text-muted mb-0">Antalya Otelleri</p>
                    <p class="text-muted mb-0">Alanya Otelleri</p>
                    <p class="text-muted mb-0">Ayvalık Otelleri</p>
                    <p class="text-muted mb-0">Kemer Otelleri</p>
                    <p class="text-muted mb-0">Kuşadası Otelleri</p>
                </div>

                <div class="col-xl-3 col-lg-3 col-md-6 col-sm-12 mb-3">
                    <h4><i class="fa-solid fa-chevron-down fa-2x me-2"></i>Keşfet!</h4>
                    <div class="row"><a asp-controller="Anasayfa" asp-action="Oteller" class="link-secondary"><i class="fa-solid fa-hotel me-2"></i>Otel</a></div>
                    <div class="row"><a asp-controller="Anasayfa" asp-action="TekneTurları" class="link-secondary"><i class="fa-solid fa-ship me-2"></i>Tekne Turları</a></div>
                    <div class="row"><a asp-controller="Anasayfa" asp-action="YurtdisiTurlar" class="link-secondary"><i class="fa-solid fa-plane me-2"></i>Yurtdışı Turlar</a></div>
                </div>

                <div class="col-xl-3 col-lg-3 col-md-6 col-sm-12 mb-3">
                    <h4><i class="fa-solid fa-chevron-down fa-2x me-2"></i>Kurumsal</h4>
                    <div class="row"><a asp-controller="Anasayfa" asp-action="İletişim" class="link-secondary mb-3"><i class="fa-solid fa-phone me-2"></i>İletişim</a></div>
                    <a href="#"><i class="fab fa-facebook fa-2x"></i></a>
                    <a href="#"><i class="fab fa-twitter fa-2x"></i></a>
                    <a href="#"><i class="fab fa-youtube fa-2x"></i></a>
                    <a href="#"><i class="fab fa-linkedin fa-2x"></i></a>
                </div>

                <div class="col-xl-3 col-lg-3 col-md-6 col-sm-12 mb-3">
                    <h4><i class="fa-solid fa-chevron-down fa-2x me-2"></i>BeşGün Turizm</h4>
                    <p>Copyright © 2023 BeşGün Turistik Servisleri A.Ş. Tüm hakları saklıdır. Kullanım Sözleşmesi | Gizlilik Sözleşmesi | Kişisel Verilerin Korunması ve İşlenmesi Politikası</p>
                </div>
            </div>
        </div>
   </footer>



  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
    
</body>
</html>